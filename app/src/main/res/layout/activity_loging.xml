<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_loging"
    tools:context=".loding.Loging">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:gravity="center"
            android:text="用户登录"
            android:textSize="30sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="用户名:"
                android:textSize="20sp" />

            <EditText
                android:layout_margin="4dp"
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_sytle"
                android:gravity="left"
                android:hint="手机号/账号"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="密   码:"
                android:textSize="20sp" />

            <EditText
                android:layout_margin="4dp"
                android:id="@+id/et_userpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_sytle"
                android:gravity="left"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:layout_margin="6dp"
                android:background="#6666"
                android:id="@+id/bt_loging"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="登  录"
                android:textSize="20sp" />

            <Button
                android:layout_margin="6dp"
                android:background="#6666"
                android:id="@+id/bt_add"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注  册"
                android:textSize="20sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="记住密码" />

        <CheckBox
            android:id="@+id/cb_loging"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="下次自动登录" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:textColor="#0b0"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="用户须知：默认已阅读和同意《用户协议》和《隐私协议》"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="2020年@安卓系统,测试版1.0.0"
            android:textSize="18sp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>